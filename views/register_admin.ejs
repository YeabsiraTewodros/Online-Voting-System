<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register New Admin</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gradient-primary min-vh-100">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5 col-xl-4">
        <div class="card shadow-lg-custom border-radius-xl fade-in-up">
          <div class="card-header bg-gradient-primary text-white text-center py-4">
            <h2 class="h3 fw-bold mb-0">
              <i class="fas fa-user-plus me-2"></i>Register New Admin
            </h2>
            <p class="mb-0 small">Create a new administrator account</p>
          </div>
          <div class="card-body p-4">
            <% if (typeof error !== 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
              </div>
            <% } %>
            <form action="/admin/register-admin" method="POST">
              <div class="mb-3">
                <label for="username" class="form-label">
                  <i class="fas fa-user me-2"></i>Username
                </label>
                <input type="text" class="form-control" id="username" name="username" required placeholder="Enter username" minlength="3">
                <div class="form-text">Username must be at least 3 characters long</div>
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">
                  <i class="fas fa-lock me-2"></i>Password
                </label>
                <div class="input-group">
                  <input type="password" class="form-control" id="password" name="password" required placeholder="Enter password" minlength="6">
                  <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                    <i class="fas fa-eye" id="passwordIcon"></i>
                  </button>
                </div>
                <div class="form-text">Password must be at least 6 characters long</div>
              </div>

              <div class="mb-3">
                <label for="confirmPassword" class="form-label">
                  <i class="fas fa-lock me-2"></i>Confirm Password
                </label>
                <div class="input-group">
                  <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required placeholder="Confirm password">
                  <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                    <i class="fas fa-eye" id="confirmPasswordIcon"></i>
                  </button>
                </div>
                <div id="passwordMatchMessage" class="form-text"></div>
              </div>

              <div class="mb-4">
                <label for="role" class="form-label">
                  <i class="fas fa-user-shield me-2"></i>Admin Role
                </label>
                <select class="form-select" id="role" name="role" required>
                  <option value="">Select role</option>
                  <option value="admin">Admin</option>
                  <option value="super_admin">Super Admin</option>
                </select>
                <div class="form-text">
                  <strong>Admin:</strong> Can manage voters and vote periods<br>
                  <strong>Super Admin:</strong> Full system access including admin management
                </div>
              </div>

              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                  <i class="fas fa-user-plus me-2"></i>Create Admin Account
                </button>
              </div>
            </form>

            <div class="text-center">
              <a href="/admin/login" class="btn btn-primary btn-lg">
                <i class="fas fa-arrow-left me-2"></i>Back to Admin Dashboard
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Custom JavaScript -->
  <script src="/js/register_admin.js"></script>
</body>
</html>
