<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Parties - Ethiopian Vote System</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin_parties.css">
</head>
<body>
  <div class="parties-container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
      <h1><i class="fas fa-flag"></i> Manage Political Parties</h1>
      <% if (isOriginalSuperAdmin) { %>
        <a href="/admin/parties/add" class="add-party-btn">
          <i class="fas fa-plus"></i> Add New Party
        </a>
      <% } %>
    </div>

    <% if (parties.length === 0) { %>
      <div class="no-parties">
        <i class="fas fa-flag fa-3x mb-3"></i>
        <h3>No parties found</h3>
        <p>Start by adding the first political party to the system.</p>
        <% if (isOriginalSuperAdmin) { %>
          <a href="/admin/parties/add" class="add-party-btn">
            <i class="fas fa-plus"></i> Add First Party
          </a>
        <% } %>
      </div>
    <% } else { %>
      <% parties.forEach(party => { %>
        <div class="party-card">
          <div class="party-header">
            <div style="display: flex; align-items: center;">
              <% if (party.logo_url) { %>
                <img src="<%= party.logo_url %>" alt="<%= party.name_english %> Logo" class="party-logo">
              <% } else { %>
                <div class="party-logo" style="background: #6c757d; display: flex; align-items: center; justify-content: center;">
                  <i class="fas fa-flag fa-2x" style="color: white;"></i>
                </div>
              <% } %>
              <div class="party-info">
                <div class="party-name"><%= party.name_english %></div>
                <div class="party-leader"><%= party.leader_name_english %></div>
              </div>
              <% if (party.leader_image_url) { %>
                <div style="margin-left: 1rem;">
                  <img src="<%= party.leader_image_url %>" alt="<%= party.leader_name_english %>" class="leader-image-header">
                </div>
              <% } %>
            </div>
            <% if (isOriginalSuperAdmin) { %>
              <div class="party-actions">
                <a href="/admin/parties/edit/<%= party.id %>" class="btn-edit">
                  <i class="fas fa-edit"></i> Edit
                </a>
                <form action="/admin/parties/delete/<%= party.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this party? This action cannot be undone.')">
                  <button type="submit" class="btn-edit" style="background: rgba(220, 53, 69, 0.8); border: 1px solid rgba(220, 53, 69, 0.9);">
                    <i class="fas fa-trash"></i> Delete
                  </button>
                </form>
              </div>
            <% } %>
          </div>

          <div class="party-details">
            <div class="party-description">
              <strong>Description:</strong> <%= party.description_english %>
            </div>

            <div class="party-meta">
              <div class="meta-item">
                <div class="meta-label">Name in Amharic</div>
                <div class="meta-value"><%= party.name_amharic %></div>
              </div>
              <div class="meta-item">
                <div class="meta-label">Leader in Amharic</div>
                <div class="meta-value"><%= party.leader_name_amharic %></div>
              </div>
              <div class="meta-item">
                <div class="meta-label">Ideology</div>
                <div class="meta-value"><%= party.ideology %></div>
              </div>
              <div class="meta-item">
                <div class="meta-label">Description in Amharic</div>
                <div class="meta-value"><%= party.description_amharic %></div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } %>

    <div style="text-align: center; margin-top: 2rem;">
      <a href="/admin/login" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Admin Panel
      </a>
      <a href="/party.html" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> View Partys
      </a>
    </div>
  </div>
</body>
</html>
