    <!-- Registration countdown script -->
    <script>
        (function() {
            // Safe access to template variables (they may be empty strings)
            const rawStart = '<%= registrationStartDate %>';
            const rawEnd = '<%= registrationEndDate %>';
            const regStart = rawStart ? new Date(rawStart) : null;
            const regEnd = rawEnd ? new Date(rawEnd) : null;

            function pad(n){return n.toString().padStart(2,'0');}

            function updateRegCountdown(targetDate, title) {
                const now = new Date();
                const timeLeft = targetDate - now;
                const container = document.getElementById('registration-countdown');
                const titleEl = document.getElementById('registration-countdown-title');

                if (!container || !titleEl) return;

                if (timeLeft <= 0) {
                    document.getElementById('reg-days').textContent = '00';
                    document.getElementById('reg-hours').textContent = '00';
                    document.getElementById('reg-minutes').textContent = '00';
                    document.getElementById('reg-seconds').textContent = '00';
                    titleEl.textContent = title + ' (now)';
                    return;
                }

                const days = Math.floor(timeLeft / (1000*60*60*24));
                const hours = Math.floor((timeLeft % (1000*60*60*24)) / (1000*60*60));
                const minutes = Math.floor((timeLeft % (1000*60*60)) / (1000*60));
                const seconds = Math.floor((timeLeft % (1000*60)) / 1000);

                document.getElementById('reg-days').textContent = pad(days);
                document.getElementById('reg-hours').textContent = pad(hours);
                document.getElementById('reg-minutes').textContent = pad(minutes);
                document.getElementById('reg-seconds').textContent = pad(seconds);
                titleEl.textContent = title;
            }

            try {
                const now = new Date();
                if (regStart && now < regStart) {
                    const container = document.getElementById('registration-countdown');
                    if (container) container.style.display = 'block';
                    updateRegCountdown(regStart, 'Registration Starts In');
                    setInterval(() => updateRegCountdown(regStart, 'Registration Starts In'), 1000);
                } else if (regEnd && now < regEnd) {
                    const container = document.getElementById('registration-countdown');
                    if (container) container.style.display = 'block';
                    updateRegCountdown(regEnd, 'Registration Ends In');
                    setInterval(() => updateRegCountdown(regEnd, 'Registration Ends In'), 1000);
                }
            } catch (e) {
                // ignore errors
            }
        })();
    </script>

