<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Admins</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gradient-primary min-vh-100">
  <div class="container py-5">
    <div class="row">
      <div class="col-12">
        <div class="card shadow-lg-custom border-radius-xl fade-in-up">
          <div class="card-header bg-gradient-primary text-white py-4">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h2 class="h3 fw-bold mb-0">
                  <i class="fas fa-users-cog me-2"></i>Admin Management
                </h2>
                <p class="mb-0 small">Manage administrator accounts and permissions</p>
              </div>
              <div>
                <a href="/admin/register-admin" class="btn btn-light btn-sm">
                  <i class="fas fa-user-plus me-2"></i>Register New Admin
                </a>
              </div>
            </div>
          </div>
          <div class="card-body p-4">
            <!-- Success/Error Messages -->
            <% if (typeof message !== 'undefined') { %>
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i><%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% } %>

            <% if (typeof error !== 'undefined') { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% } %>

            <!-- Admins Table -->
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-dark">
                  <tr>
                    <th><i class="fas fa-id-badge me-1"></i>ID</th>
                    <th><i class="fas fa-user me-1"></i>Username</th>
                    <th><i class="fas fa-user-shield me-1"></i>Role</th>
                    <th><i class="fas fa-calendar me-1"></i>Created</th>
                    <th><i class="fas fa-user-cog me-1"></i>Created By</th>
                    <th><i class="fas fa-cogs me-1"></i>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% admins.forEach(function(admin) { %>
                    <tr>
                      <td><%= admin.id %></td>
                      <td>
                        <strong><%= admin.username %></strong>
                        <% if (admin.id === 1) { %>
                          <span class="badge bg-warning text-dark ms-1">Original</span>
                        <% } %>
                      </td>
                      <td>
                        <% if (admin.role === 'super_admin') { %>
                          <span class="badge bg-danger">Super Admin</span>
                        <% } else { %>
                          <span class="badge bg-info">Admin</span>
                        <% } %>
                      </td>
                      <td><%= new Date(admin.created_at).toLocaleDateString() %></td>
                      <td>
                        <% if (admin.created_by) { %>
                          Admin #<%= admin.created_by %>
                        <% } else { %>
                          <em>System</em>
                        <% } %>
                      </td>
                      <td>
                        <% if (admin.id !== 1 && currentAdminRole === 'super_admin') { %>
                          <button type="button" class="btn btn-outline-danger btn-sm delete-admin-btn"
                                  data-admin-id="<%= admin.id %>"
                                  data-admin-username="<%= JSON.stringify(admin.username) %>"
                                  data-admin-role="<%= JSON.stringify(admin.role) %>">
                            <i class="fas fa-trash me-1"></i>Delete
                          </button>
                        <% } else if (admin.id === 1) { %>
                          <span class="text-muted small">Protected</span>
                        <% } else { %>
                          <span class="text-muted small">No Permission</span>
                        <% } %>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>

            <!-- Navigation -->
            <div class="text-center mt-4">
              <a href="/admin/login" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>Back to Admin Dashboard
              </a>
              <a href="/" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-home me-2"></i>Back to Home
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirm Deletion
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete the admin account <strong id="deleteUsername"></strong>?</p>
          <div class="alert alert-warning">
            <i class="fas fa-info-circle me-2"></i>
            This action cannot be undone. The admin will lose all access to the system.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form id="deleteForm" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">
              <i class="fas fa-trash me-2"></i>Delete Admin
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Add event listeners to delete buttons
    document.addEventListener('DOMContentLoaded', function() {
      const deleteButtons = document.querySelectorAll('.delete-admin-btn');
      deleteButtons.forEach(button => {
        button.addEventListener('click', function() {
          const adminId = this.getAttribute('data-admin-id');
          const username = JSON.parse(this.getAttribute('data-admin-username'));
          const role = JSON.parse(this.getAttribute('data-admin-role'));

          document.getElementById('deleteUsername').textContent = `"${username}" (${role.replace('_', ' ')})`;
          document.getElementById('deleteForm').action = `/admin/delete-admin/${adminId}`;

          const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
          modal.show();
        });
      });
    });
  </script>
</body>
</html>
