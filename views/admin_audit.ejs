<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Audit Log</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>pre{white-space:pre-wrap;word-break:break-word;}</style>
</head>
<body class="bg-light">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h4">Admin Audit Log</h1>
      <div>
        <a href="/admin/login" class="btn btn-sm btn-outline-secondary">Admin Dashboard</a>
        <a href="/admin/logout" class="btn btn-sm btn-outline-danger">Logout</a>
      </div>
    </div>

    <form method="get" action="/admin/audit" class="row g-2 mb-3">
      <div class="col-auto">
        <input class="form-control form-control-sm" type="text" name="admin_id" placeholder="Admin ID" value="<%= filters.admin_id %>">
      </div>
      <div class="col-auto">
        <input class="form-control form-control-sm" type="text" name="action" placeholder="Action" value="<%= filters.action %>">
      </div>
      <div class="col-auto">
        <input class="form-control form-control-sm" type="text" name="table_name" placeholder="Table" value="<%= filters.table_name %>">
      </div>
      <div class="col-auto">
        <input class="form-control form-control-sm" type="datetime-local" name="from" value="<%= filters.from %>">
      </div>
      <div class="col-auto">
        <input class="form-control form-control-sm" type="datetime-local" name="to" value="<%= filters.to %>">
      </div>
      <div class="col-auto">
        <button class="btn btn-primary btn-sm" type="submit">Filter</button>
        <a class="btn btn-outline-secondary btn-sm" href="/admin/audit">Reset</a>
      </div>
    </form>

    <div class="table-responsive">
      <table class="table table-sm table-bordered align-middle">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Admin ID</th>
            <th>Action</th>
            <th>Table</th>
            <th>Record ID</th>
            <th>New Values</th>
            <th>Old Values</th>
            <th>IP</th>
            <th>User Agent</th>
            <th>When</th>
          </tr>
        </thead>
        <tbody>
          <% if (audits && audits.length) { %>
            <% audits.forEach(function(a) { %>
              <tr>
                <td><%= a.id %></td>
                <td><%= a.admin_id %></td>
                <td><%= a.action %></td>
                <td><%= a.table_name %></td>
                <td><%= a.record_id %></td>
                <td style="max-width:240px;">
                  <% try {
                       var prettyNew = (typeof a.new_values === 'string') ? JSON.parse(a.new_values) : a.new_values;
                  } catch(e) { var prettyNew = a.new_values; } %>
                  <pre><%= JSON.stringify(prettyNew, null, 2) %></pre>
                </td>
                <td style="max-width:240px;">
                  <% try {
                       var prettyOld = (typeof a.old_values === 'string') ? JSON.parse(a.old_values) : a.old_values;
                  } catch(e) { var prettyOld = a.old_values; } %>
                  <pre><%= JSON.stringify(prettyOld, null, 2) %></pre>
                </td>
                <td><%= a.ip_address %></td>
                <td style="max-width:200px;"><%= a.user_agent %></td>
                <td><%= new Date(a.created_at).toLocaleString() %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="10" class="text-center">No records found</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
