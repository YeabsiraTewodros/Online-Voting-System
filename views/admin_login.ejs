<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gradient-primary min-vh-100">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5 col-xl-4">
        <div class="card shadow-lg-custom border-radius-xl fade-in-up">
          <div class="card-header bg-gradient-primary text-white text-center py-4">
            <h2 class="h3 fw-bold mb-0">
              <i class="fas fa-user-shield me-2"></i>Admin Login
            </h2>
            <p class="mb-0 small">Enter admin credentials</p>
          </div>
          <div class="card-body p-4">
            <% if (isLoggedIn) { %>
              <!-- Admin Dashboard Welcome -->
              <div class="text-center mb-4">
                <h4 class="text-success">
                  <i class="fas fa-check-circle me-2"></i>Welcome, Admin!
                </h4>
                <p class="text-muted">You are logged in and can manage the voting system.</p>
              </div>

              <!-- Vote Period Status -->
              <div class="alert alert-info mb-4">
                <h5 class="alert-heading">
                  <i class="fas fa-info-circle me-2"></i>Vote Period Status
                </h5>
                <p class="mb-2">
                  Current Status: <strong class="<%= votePeriodOpen ? 'text-success' : 'text-danger' %>">
                    <%= votePeriodOpen ? 'OPEN' : 'CLOSED' %>
                  </strong>
                </p>
                <small class="text-muted">Voters <%= votePeriodOpen ? 'can' : 'cannot' %> cast their votes.</small>
              </div>

              <!-- Registration Period Status -->
              <div class="alert <%= registrationPeriodOpen ? 'alert-success' : 'alert-secondary' %> mb-4">
                <h5 class="alert-heading">
                  <i class="fas fa-user-plus me-2"></i>Registration Period
                </h5>
                <p class="mb-2">
                  Current Status: <strong class="<%= registrationPeriodOpen ? 'text-white' : 'text-dark' %>">
                    <%= registrationPeriodOpen ? 'OPEN' : 'CLOSED' %>
                  </strong>
                </p>
                <small class="text-light"><%= registrationPeriodOpen ? 'Admins may register voters now.' : 'Voter registration is not currently open.' %></small>
              </div>

              <!-- Admin Actions -->
              <div class="row g-2 mb-3">
                <div class="col-12">
                  <a href="/admin/register" class="btn btn-outline-primary w-100">
                    <i class="fas fa-user-plus me-2"></i>Register Voter
                  </a>
                </div>
                <div class="col-12">
                  <a href="/results" class="btn btn-outline-info w-100">
                    <i class="fas fa-chart-bar me-2"></i>View Results
                  </a>
                </div>
                <% if (adminRole === 'super_admin' && adminId === 1) { %>
                <div class="col-12">
                  <a href="/admin/toggle" class="btn btn-outline-primary w-100">
                    <i class="fas fa-calendar-alt me-2"></i>Set Election Period
                  </a>
                </div>
                <div class="col-12">
                  <a href="/admin/registration-period" class="btn btn-outline-primary w-100">
                    <i class="fas fa-calendar-alt me-2"></i>Set Registration Period
                  </a>
                </div>
                <div class="col-12">
                  <a href="/admin/parties" class="btn btn-outline-warning w-100">
                    <i class="fas fa-flag me-2"></i>Manage Parties
                  </a>
                </div>
                <div class="col-12">
                  <a href="/admin/audit" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-clipboard-list me-2"></i>View Admin Audit Log
                  </a>
                </div>
                <% } %>
                <% if (adminRole === 'super_admin') { %>
                <div class="col-12">
                  <a href="/admin/manage-admins" class="btn btn-outline-warning w-100">
                    <i class="fas fa-users-cog me-2"></i>Manage Admins
                  </a>
                </div>
                <div class="col-12">
                  <a href="/admin/register-admin" class="btn btn-outline-success w-100">
                    <i class="fas fa-user-plus me-2"></i>Register Admin
                  </a>
                </div>
                <% } %>
                <% if (adminRole === 'super_admin' && adminId === 1) { %>
                <div class="col-12">
                  <a href="/admin/reset-database" class="btn btn-outline-danger w-100" onclick="return confirm('⚠️ DANGER: This will permanently delete ALL data except your account. Are you absolutely sure you want to reset the entire database? This action cannot be undone!')">
                    <i class="fas fa-exclamation-triangle me-2"></i>Reset Database
                  </a>
                </div>
                <% } %>
              </div>

              <!-- Logout -->
              <div class="text-center">
                <a href="/admin/logout" class="btn btn-outline-danger">
                  <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a>
              </div>
            <% } else { %>
              <!-- Login Form -->
              <form action="/admin/login" method="POST">
                <div class="mb-3">
                  <label for="username" class="form-label">
                    <i class="fas fa-user me-2"></i>Username
                  </label>
                  <input type="text" class="form-control" id="username" name="username" required placeholder="Enter username">
                </div>
                <div class="mb-4">
                  <label for="password" class="form-label">
                    <i class="fas fa-lock me-2"></i>Password
                  </label>
                  <div class="input-group">
                    <input type="password" class="form-control" id="password" name="password" required placeholder="Enter password">
                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                      <i class="fas fa-eye" id="passwordIcon"></i>
                    </button>
                  </div>
                </div>
                <div class="d-grid">
                  <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Login as Admin
                  </button>
                </div>
              </form>
              <div class="text-center mt-4">
                <a href="/" class="btn btn-success">
                  <i class="fas fa-arrow-left me-2"></i>Back to Home
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Custom JavaScript -->
  <script>
    // Password visibility toggle
    document.getElementById('togglePassword').addEventListener('click', function() {
      const passwordInput = document.getElementById('password');
      const passwordIcon = document.getElementById('passwordIcon');

      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        passwordIcon.classList.remove('fa-eye');
        passwordIcon.classList.add('fa-eye-slash');
      } else {
        passwordInput.type = 'password';
        passwordIcon.classList.remove('fa-eye-slash');
        passwordIcon.classList.add('fa-eye');
      }
    });
  </script>
</body>
</html>
